<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.incognitos.bfar_3lcems.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/login">

    <EditText
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:id="@+id/etUsernameLogin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#deffffff"
        android:hint="Username"
        android:gravity="center" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPasswordLogin"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/etUsernameLogin"
        android:layout_centerHorizontal="true"
        android:background="#deffffff"
        android:gravity="center"
        android:hint="Password" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/etUsernameLogin"
        android:layout_alignLeft="@+id/etUsernameLogin"
        android:layout_alignStart="@+id/etUsernameLogin"
        android:background="@drawable/userlogin"
        android:layout_above="@+id/etPasswordLogin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/etPasswordLogin"
        android:layout_alignLeft="@+id/etPasswordLogin"
        android:layout_alignStart="@+id/etPasswordLogin"
        android:background="@drawable/unlock"
        android:layout_alignTop="@+id/etPasswordLogin"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <Button
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:text="Login"
        android:id="@+id/btnLoginMain"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#006064"
        android:layout_below="@+id/etPasswordLogin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
